<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".QrCode_MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Faça o scan do código QR para saber a sua localização atual:"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/yellow"/>

    <Button
        android:id="@+id/scanner"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="60dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/yellow"
        android:text="QR SCANNER"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanner"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/yellow"/>


    <Button
        android:id="@+id/button_load_favoritos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/yellow"
        android:textSize="13sp"
        android:layout_below="@+id/button_cancel"
        android:text="Deseja navegar com a bussola?"

        android:onClick="navegar_bussola"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Confirmar"
        android:textColor="@color/black"
        android:backgroundTint="@color/yellow"
        android:onClick="confirmarLocalizacao" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Cancelar"
        android:textColor="@color/black"
        android:backgroundTint="@color/yellow"
        android:onClick="cancelarLocalizacao" />

</RelativeLayout>